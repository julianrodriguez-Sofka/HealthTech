                  "        pm.expect(patient).to.be.an('object');",
                  "        console.log('üìù Propiedades del paciente:', Object.keys(patient).join(', '));",
                  "        ",
                  "        // Validaci√≥n flexible: al menos debe tener id",
                  "        const hasId = patient.hasOwnProperty('id') || patient.hasOwnProperty('_id');",
                  "        pm.expect(hasId, 'Paciente debe tener id').to.be.true;",
                  "    } else {",
                  "        console.log('‚ö†Ô∏è Array vac√≠o, no se puede validar estructura');",
                  "    }",
                  "});",
                  "",
                  "pm.test(\"Pacientes ordenados por prioridad\", function () {",
                  "    const response = pm.response.json();",
                  "    const patients = response._value || response;",
                  "    ",
                  "    if (patients.length > 1) {",
                  "        // Verificar si tienen propiedad priority",
                  "        if (patients[0].priority !== undefined) {",
                  "            let ordenado = true;",
