          "name": "Register Critical Patient",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar ID del paciente para uso posterior",
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set(\"lastPatientId\", response.id);",
                  "    console.log(\"✅ Paciente crítico registrado:\", response.name);",
                  "    console.log(\"Prioridad:\", response.priority);",
                  "}",
                  "",
                  "pm.test(\"Paciente registrado exitosamente\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Prioridad calculada\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('priority');",
                  "});"
