                  "    } else if (Array.isArray(response)) {",
                  "        patients = response;",
                  "    } else {",
                  "        throw new Error('Formato de respuesta no reconocido');",
                  "    }",
                  "    console.log('‚úÖ ' + patients.length + ' pacientes encontrados');",
                  "});",
