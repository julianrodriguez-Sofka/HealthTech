        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar token autom√°ticamente",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    const token = response.accessToken || response.token;",
                  "    ",
                  "    if (token) {",
                  "        pm.environment.set(\"token\", token);",
                  "        pm.environment.set(\"userId\", response.user.id);",
                  "        pm.environment.set(\"userRole\", response.user.role);",
                  "        console.log(\"‚úÖ Token guardado exitosamente\");",
                  "        console.log(\"Usuario:\", response.user.name);",
                  "        console.log(\"Rol:\", response.user.role);",
                  "    }",
                  "}",
                  "",
                  "// TEST 1: Validaci√≥n completa de autenticaci√≥n",
                  "pm.test(\"Login exitoso - Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Token JWT recibido\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('accessToken');",
                  "    pm.expect(response.accessToken).to.be.a('string');",
                  "    pm.expect(response.accessToken.length).to.be.above(20);",
                  "});",
                  "",
                  "pm.test(\"Usuario tiene estructura correcta\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('user');",
                  "    pm.expect(response.user).to.have.property('id');",
                  "    pm.expect(response.user).to.have.property('email');",
                  "    pm.expect(response.user).to.have.property('role');",
                  "    pm.expect(response.user).to.have.property('name');",
                  "});",
                  "",
                  "pm.test(\"Rol de usuario es v√°lido\", function () {",
                  "    const response = pm.response.json();",
                  "    const validRoles = ['admin', 'doctor', 'nurse'];",
                  "    pm.expect(validRoles).to.include(response.user.role);",
                  "});",
                  "",
                  "pm.test(\"Tiempo de respuesta < 1000ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
